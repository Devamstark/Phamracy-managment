# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pharmacy_user
DB_PASSWORD=pharmacy_password
DB_DATABASE=pharmacy_erx
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Pharmacy Details (for invoices)
PHARMACY_NAME=MediCare Pharmacy
PHARMACY_ADDRESS=123 Main Street, Mumbai, Maharashtra 400001
PHARMACY_PHONE=+91-22-12345678
PHARMACY_EMAIL=info@medicarepharmacy.in
PHARMACY_GST_NUMBER=27AAAAA0000A1Z5
PHARMACY_LICENSE_NUMBER=MH-MUM-12345

# File Storage
UPLOAD_DIR=./uploads
PRESCRIPTION_STORAGE_DIR=./uploads/prescriptions
INVOICE_STORAGE_DIR=./uploads/invoices

# ABDM/NDHM Configuration (for future integration)
ABDM_API_URL=https://dev.abdm.gov.in/api
ABDM_CLIENT_ID=your-client-id
ABDM_CLIENT_SECRET=your-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
